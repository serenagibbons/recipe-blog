@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Serena's Favorite Recipes</h1>
    <p class="lead">Welcome to my favorite recipes blog! Here you'll find some recipes I love straight from other sites, recipes I've tweaked, and some I've created myself!</p>
    <p><a class="btn btn-default" href="..\Recipes\Index">View all recipes &raquo;</a></p>

</div>

<div class="row">
    <div class="col-md-4">
        <h2>@Html.ActionLink("Dessert Recipes", "Category", "Recipes", new { category = "Dessert" }, new { style = "color:black;" })</h2>
        <img class="img img-thumbnail" src="..\..\assets\dessert.jpg" />
    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Lunch/Dinner Recipes", "Category", "Recipes", new { category = "Dinner" }, new { style = "color:black;" })</h2>
        <img class="img img-thumbnail" src="..\..\assets\lunchdinner.jpg" />
    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Breakfast Recipes", "Category", "Recipes", new { category = "Breakfast" }, new { style = "color:black;" })</h2>
        <img class="img img-thumbnail" src="..\..\assets\breakfast.jpg" />
    </div>
</div>